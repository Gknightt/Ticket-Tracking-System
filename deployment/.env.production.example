# ==============================================
# Production Environment Configuration
# Domain: mapactive.tech
# ==============================================

# ==============================================
# Cloudflare DNS Challenge (for Let's Encrypt)
# ==============================================
# Get these from Cloudflare Dashboard -> My Profile -> API Tokens
CF_API_EMAIL=your-cloudflare-email@example.com
CF_DNS_API_TOKEN=your-cloudflare-api-token

# ==============================================
# Traefik Dashboard
# ==============================================
# Generate password hash: echo $(htpasswd -nb admin your-password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=$$apr1$$xyz123$$hashedpassword

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=ticketapp_user
POSTGRES_PASSWORD=change-this-strong-password-123

# ==============================================
# RabbitMQ Configuration
# ==============================================
RABBITMQ_USER=ticketapp_rabbitmq
RABBITMQ_PASSWORD=change-this-rabbitmq-password-456

# ==============================================
# JWT & Security Keys
# ==============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
JWT_SIGNING_KEY=change-this-jwt-signing-key-very-long-and-random
AUTH_SECRET_KEY=change-this-auth-service-secret-key-random
WORKFLOW_SECRET_KEY=change-this-workflow-service-secret-key-random
TICKET_SECRET_KEY=change-this-ticket-service-secret-key-random
MESSAGING_SECRET_KEY=change-this-messaging-service-secret-key-random
NOTIFICATION_SECRET_KEY=change-this-notification-service-secret-key-random

# ==============================================
# Email Configuration (SMTP)
# ==============================================
# For Gmail: Enable 2FA and use App Password
# For SendGrid/Mailgun: Use their SMTP credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@mapactive.tech

# ==============================================
# Notification Service API Keys
# ==============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
NOTIFICATION_API_KEYS=api-key-1,api-key-2,api-key-3
NOTIFICATION_INTERNAL_API_KEY=internal-api-key-secure-random

# ==============================================
# Service URLs (Internal Docker Network)
# ==============================================
# These are used for internal service-to-service communication
AUTH_SERVICE_URL=http://auth-service:8000
WORKFLOW_SERVICE_URL=http://workflow-api:8000
TICKET_SERVICE_URL=http://ticket-service:7000
MESSAGING_SERVICE_URL=http://messaging-service:8001
NOTIFICATION_SERVICE_URL=http://notification-service:8001

# ==============================================
# Public URLs (External HTTPS)
# ==============================================
# These are used for frontend and external access
PUBLIC_AUTH_URL=https://auth.mapactive.tech
PUBLIC_WORKFLOW_URL=https://workflow.mapactive.tech
PUBLIC_TICKET_URL=https://ticket.mapactive.tech
PUBLIC_MESSAGING_URL=https://messaging.mapactive.tech
PUBLIC_NOTIFICATION_URL=https://notification.mapactive.tech
PUBLIC_FRONTEND_URL=https://mapactive.tech

# ==============================================
# Django Production Settings
# ==============================================
DJANGO_ENV=production
DJANGO_DEBUG=False
