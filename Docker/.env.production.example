# ============================================================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# Copy to .env and fill in actual values for your deployment
# ============================================================================

# ========== DJANGO CORE SETTINGS ==========
DJANGO_SECRET_KEY=your-secret-key-change-this-to-a-long-random-string
DJANGO_JWT_SIGNING_KEY=your-jwt-signing-key-change-this
DJANGO_DEBUG=False
DJANGO_ENV=production

# ========== ALLOWED HOSTS & CORS ==========
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com,localhost
DJANGO_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000
DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========== DATABASE CONFIGURATION ==========
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password-change-this
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-change-this@db:5432/postgres

# ========== RABBITMQ CONFIGURATION ==========
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-rabbitmq-password-change-this

# ========== EMAIL CONFIGURATION ==========
# Gmail SMTP example (use app-specific password for Gmail accounts)
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_EMAIL_HOST=smtp.gmail.com
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_HOST_USER=your-email@gmail.com
DJANGO_EMAIL_HOST_PASSWORD=your-app-specific-password
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Alternative: SendGrid
# DJANGO_EMAIL_BACKEND=sendgrid_backend.SendgridBackend
# SENDGRID_API_KEY=your-sendgrid-api-key

# Alternative: AWS SES
# DJANGO_EMAIL_BACKEND=django_ses.SESBackend
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret

# ========== SERVICE DISCOVERY URLs ==========
DJANGO_BASE_URL=https://yourdomain.com
DJANGO_FRONTEND_URL=https://yourdomain.com
TTS_SYSTEM_URL=https://yourdomain.com/
AMS_SYSTEM_URL=https://yourdomain.com/ams
HDTS_SYSTEM_URL=https://yourdomain.com/hdts
BMS_SYSTEM_URL=https://yourdomain.com/bms
DEFAULT_SYSTEM_URL=https://yourdomain.com/dashboard
FRONTEND_URL=https://yourdomain.com

# ========== VITE FRONTEND CONFIGURATION ==========
VITE_AUTH_URL=https://yourdomain.com/api/v1/auth
VITE_WORKFLOW_API=https://yourdomain.com/api/v1/workflows
VITE_BACKEND_API=https://yourdomain.com/api/v1/

# ========== MEDIA FILES ==========
DJANGO_MEDIA_BASE_URL=https://yourdomain.com/media

# ========== OPTIONAL: MONITORING & LOGGING ==========
# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# NewRelic APM (optional)
NEW_RELIC_CONFIG_FILE=newrelic.ini
NEW_RELIC_ENVIRONMENT=production

# ========== OPTIONAL: REDIS FOR CACHING ==========
# Uncomment if using Redis instead of RabbitMQ
# REDIS_URL=redis://redis:6379/0
# CACHES_URL=redis://redis:6379/1

# ========== OPTIONAL: AWS S3 FOR FILE STORAGE ==========
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=%s.s3.amazonaws.com

# ========== OPTIONAL: SLACK INTEGRATION ==========
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ========== SECURITY SETTINGS ==========
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ========== CELERY SETTINGS ==========
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=540
CELERY_WORKER_PREFETCH_MULTIPLIER=4
