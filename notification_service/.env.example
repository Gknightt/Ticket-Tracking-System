# Notification Service Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default)
# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/notification_db

# ==================================
# Email Provider Configuration
# ==================================

# Email Provider: 'gmail' (for testing) or 'sendgrid' (for production)
EMAIL_PROVIDER=gmail

# Gmail API Configuration (for testing/capstone)
# 1. Go to https://console.cloud.google.com/
# 2. Create project and enable Gmail API
# 3. Create OAuth 2.0 Client ID (Desktop app)
# 4. Download credentials.json and place in notification_service folder
# 5. Run test_gmail_api.py to authenticate (will create token.pickle)
# Note: credentials.json and token.pickle are gitignored

# Legacy SMTP Configuration (not recommended for Railway)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@notifications.com

# Future: SendGrid Configuration (for production)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key-here
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ==================================
# Service Configuration
# ==================================

# Notification Service Settings
NOTIFICATION_SERVICE_PORT=8001
AUTH_SERVICE_URL=http://localhost:8000

# API Key Authentication for v2 endpoints (comma-separated list)
NOTIFICATION_API_KEYS=demo-api-key-123,test-api-key-456,your-secure-api-key

# Celery configuration
CELERY_BROKER_URL="amqp://admin:admin@localhost:5672/"
NOTIFICATION_QUEUE="notification-queue"
INAPP_NOTIFICATION_QUEUE="inapp-notification-queue"
