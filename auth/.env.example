# ==========================
# General Django Settings
# ==========================

# Django debug mode — should be True for local development only.
DEBUG=True

# The secret key for Django — replace with your own secure key in production.
SECRET_KEY=your-django-secret-key

# Current environment (development, production, staging, etc.)
ENVIRONMENT=development

# Comma-separated list of valid hosts (use * for dev; be specific in prod)
ALLOWED_HOSTS=*

# ==========================
# Database Settings
# ==========================

# These PostgreSQL settings are ignored in local dev using SQLite
# Keep here for production deployment reference
PGHOST=localhost
PGPORT=5432
POSTGRES_DB=your-db-name
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password

# ==========================
# Email Settings
# ==========================

# Email backend to use (smtp, console, file-based, etc.)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail SMTP server
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password  # Use App Passwords for Gmail
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your-team@yourdomain.com

# ==========================
# Frontend Base URL
# ==========================

# Used in emails or redirects to link back to frontend app
FRONTEND_BASE_URL=http://localhost:3000
