# Monitoring Configuration

# Database connection (for PostgreSQL monitoring)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ticketdb
DB_USER=postgres
DB_PASSWORD=your_password_here

# Monitoring settings
LOG_RETENTION_DAYS=30
METRICS_COLLECTION_INTERVAL=5000
ENABLE_CONSOLE_LOGGING=true

# Load testing targets
LOAD_TEST_TARGET=http://localhost:8000
LOAD_TEST_AUTH_TOKEN=your_test_token_here

# Alert thresholds
ALERT_RESPONSE_TIME_MS=1000
ALERT_ERROR_RATE_PERCENT=5
ALERT_CPU_PERCENT=90
ALERT_MEMORY_PERCENT=85
